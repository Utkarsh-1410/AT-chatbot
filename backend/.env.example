# ===================================
# AstroTamil Customer Care Assistant
# Environment Variables Configuration
# ===================================

# ============ Django Settings ============
# SECURITY WARNING: Generate a strong secret key for production
# Generate one: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-change-in-production

# SECURITY WARNING: Set DEBUG=False in production
DEBUG=False

# Add your Digital Ocean domain/IP here
# Example: yourdomain.com,www.yourdomain.com,123.456.789.0
ALLOWED_HOSTS=localhost,127.0.0.1

# ============ PostgreSQL Database ============
# Required for production on Digital Ocean
POSTGRES_NAME=astrotamil_db
POSTGRES_USER=astrotamil_user
POSTGRES_PASSWORD=your_strong_password_here
POSTGRES_HOST=db-postgresql-nyc3-12345.ondigitalocean.com
POSTGRES_PORT=25060

# ============ Email Notifications ============
# Configure for human handoff alerts

# Admin email to receive handoff notifications
ADMIN_EMAIL=admin@astrotamil.com

# Email server settings (Gmail example)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
EMAIL_FROM_ADDRESS=noreply@astrotamil.com
EMAIL_USE_TLS=True

# Alternative: SendGrid, AWS SES, etc.
# EMAIL_HOST=smtp.sendgrid.net
# EMAIL_HOST_USER=apikey
# EMAIL_HOST_PASSWORD=your_sendgrid_api_key

# ============ SMS Notifications (Optional) ============
# Enable SMS alerts for urgent handoff requests
SMS_NOTIFICATIONS_ENABLED=false
AGENT_PHONE_NUMBER=+919876543210

# Twilio configuration (if using SMS)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ============ CORS Settings ============
# React Native mobile app URL (if needed for web version)
CORS_ALLOWED_ORIGINS=http://localhost:8081,https://yourdomain.com

# ============ Static Files (Production) ============
# For serving static files on Digital Ocean
STATIC_URL=/static/
STATIC_ROOT=/var/www/astrotamil/static

# ============ Logging ============
LOG_LEVEL=INFO
LOG_FILE=/var/log/astrotamil/django.log

# ============ Security Headers (Production) ============
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
